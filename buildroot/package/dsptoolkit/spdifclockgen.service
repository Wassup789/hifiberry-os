[Unit]
Description=SPDIF clock generator
Wants=sound.target
After=sound.target sigmatcp.service
ConditionPathExists=/etc/features/spdifnoclock

[Service]
Type=simple
ExecStart=/usr/bin/spdifclockgen
StandardOutput=journal
Restart=always
RestartSec=10
TimeoutStopSec=10

[Install]
WantedBy=multi-user.target
